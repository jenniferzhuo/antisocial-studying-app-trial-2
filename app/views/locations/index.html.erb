<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all locations
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new location
    </h2>

    <form action="/insert_location" method="post">
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="address_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <select name="category_from_query" id="category_box" class="form-control form-control-sm mr-sm-1" value="Choose a purpose...">
        <option value="Cafe">Cafe</option>
        <option value="Library">Library</option>
        <option value="Other">Other</option></select>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create location
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Category
        </th>

        <th>
        </th>
      </tr>

      <% Location.all.order({ :name => :asc }).each do |location| %>
      <tr>

        <td>
          <%= location.name %>
        </td>

        <td>
          <%= location.address %>
        </td>

        <td>
          <%= location.category %>
        </td>

        <td>
          <a href="/locations/<%= location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
