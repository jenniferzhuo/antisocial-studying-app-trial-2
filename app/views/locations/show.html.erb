<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @location.name %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/locations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @location.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @location.address %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @location.category %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@location.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@location.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit location
    </h2>

    <form action="/modify_location/<%= @location.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control" value="<%= @location.name %>">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="address_from_query" class="form-control" value="<%= @location.address %>">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="category_from_query" class="form-control" value="<%= @location.category %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update location
      </button>
    </form>
  </div>
</div>

<hr>
