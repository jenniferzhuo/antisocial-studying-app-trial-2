<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of received follow requests
    </h1>
  </div>
</div>


<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Sender
        </th>

        <th>
          Accepted
        </th>

        <th>
          Sent at
        </th>

        <th>
        </th>
      </tr>

      <% @follow_requests.each do |follow_request| %>
      <tr>

        <td>
          <%= User.where({:id => follow_request.sender_id}).pluck(:username).at(0).capitalize %>
        </td>

        <td>
          <%= follow_request.accepted_request %>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>

        <td>
          <a href="/accept_follow_request/<%= follow_request.id %>">
            Accept Friend Request
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
