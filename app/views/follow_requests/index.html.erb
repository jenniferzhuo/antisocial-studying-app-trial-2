<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all follow requests
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new follow request
    </h2>

    <form action="/insert_follow_request" method="post">
      <div class="form-group">
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="sender_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="recipent_id_box">
          Recipent
        </label>

        <input type="text" id="recipent_id_box" name="recipent_id_from_query" class="form-control">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="accepted_box" name="accepted_from_query" value="1">

        <label class="custom-control-label" for="accepted_box">Accepted</label>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create follow request
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipent
        </th>

        <th>
          Accepted
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follow_requests.each do |follow_request| %>
      <tr>
        <td>
          <%= follow_request.id %>
        </td>

        <td>
          <%= follow_request.sender_id %>
        </td>

        <td>
          <%= follow_request.recipent_id %>
        </td>

        <td>
          <%= follow_request.accepted %>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests/<%= follow_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
